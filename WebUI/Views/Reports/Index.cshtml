@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userName = User.Identity?.Name ?? "Guest";
    var role = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "Unknown";
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Unknown";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="height:80vh;">
    <h1 style="font-weight:700; color:var(--primary);">@controllerName</h1>

    <p style="font-size:1.2rem; margin-top:10px;">
        Logged in as:
        <span style="font-weight:600; color:var(--accent);">@userName</span>
        (<span style="color:var(--text-muted);">@role</span>)
    </p>

    @if (User.IsInRole("Admin"))
    {
        <p style="color:var(--text-secondary); margin-top:15px;">You have full administrative access to this module.</p>
    }
    else if (User.IsInRole("Cashier"))
    {
        <p style="color:var(--warning); margin-top:15px;">Limited cashier access — certain actions may be restricted.</p>
    }
    else
    {
        <p style="color:var(--danger); margin-top:15px;">Unknown or unauthorized role.</p>
    }
</div>
